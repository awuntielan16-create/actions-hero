name: hello world workflow

on:
  push:
    branch:
      -main
  pull_request:
    branch:
      -main
  workflow_dispatch:

jobs:
  hello:
    runs-on: ubuntu latest
    steps:
      - uses: actions/checkout@V2
      - name: hello world
        run:echo "hello world"
        shell: bash

  goodbye:
    runs-on: ubuntu-latest
      - name: goodbye world
        run: echo "goodbye world"
        shell: bash
